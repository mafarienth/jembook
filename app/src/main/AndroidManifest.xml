<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelompok8.jembook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kelompok8.jembook.activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kelompok8.jembook.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kelompok8.jembook.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kelompok8.jembook.activities.UsersListActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>